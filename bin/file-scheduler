#!/usr/bin/env ruby

$: << File.expand_path('../../lib', __FILE__)

require 'file_scheduler'

root = ARGV.shift
command = ARGV.shift

scheduler = FileScheduler::Base.new(root)

case command
when "contents"
  scheduler.contents.each do |content|
    puts "#{content} #{content.time_constraints}"
  end
else
  puts scheduler.send(command)
end
